<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/deep_sky_blue"
    tools:context=".SignupChoicesFragment"
    android:id="@+id/fragment_signup_choices_parent_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fragment_signup_choices_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/signup_choices_fragment_a_logo_of_the_app"
                android:src="@drawable/ic_clad_logo_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fragment_signup_choices_button_with_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:background="@drawable/custom_sign_up_button"
                android:drawableStart="@drawable/google_logo_icon"
                android:drawablePadding="@dimen/padding_8dp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/padding_39dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:text="@string/signup_choices_fragment_signup_with_google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/textSize_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_signup_choices_imageview" />

            <Button
                android:id="@+id/fragment_signup_choices_button_with_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_30dp"
                android:background="@drawable/custom_login_button"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="40dp"
                android:paddingVertical="6dp"
                android:text="@string/signup_choices_fragment_sign_up_with_email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/textSize_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_signup_choices_button_with_google" />

            <TextView
                android:id="@+id/fragment_signup_choices_textview_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins"
                android:text="Have an account? Login"
                android:textSize="@dimen/textSize_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_signup_choices_button_with_email"
                app:layout_constraintStart_toStartOf="@+id/fragment_signup_choices_button_with_email"
                app:layout_constraintTop_toBottomOf="@+id/fragment_signup_choices_button_with_email"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>